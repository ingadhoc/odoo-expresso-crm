<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_expresso_crm_campaign_filter" model="ir.ui.view">
            <field name="name">expresso_crm.campaign.select</field>
            <field name="model">expresso_crm.campaign</field>
            <field name="arch" type="xml">
                <search string="Campaign" version="7.0">
                    <group string="By Attribute">
                    <field name="name" string="Name"
                            />
                    </group>
                    <group string="By object">
                    </group>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_expresso_crm_campaign_form" model="ir.ui.view">
            <field name="name">expresso_crm.campaign.form</field>
            <field name="model">expresso_crm.campaign</field>
            <field name="arch" type="xml">
                <form string="Campaign" version="7.0">
                    <header>
                    </header>
                    <sheet string="Campaign">
                     <group>
                        <field name="name"
                            />
                     </group>
                    </sheet>

                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_expresso_crm_campaign_tree" model="ir.ui.view">
            <field name="name">expresso_crm.campaign.tree</field>
            <field name="model">expresso_crm.campaign</field>
            <field name="arch" type="xml">
                <tree string="Campaign"
                    >
                    <field name="name"
                        />
                </tree>
            </field>
        </record>

    </data>
</openerp>
